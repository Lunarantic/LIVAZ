<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    android:background="@drawable/bac1">

    <ImageButton
        android:src="@drawable/whiteshirtm"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:id="@+id/menTemplateImageButtonShirt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        />

    <ImageButton
        android:src="@drawable/bluetshirtm"
        android:background="@android:color/transparent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/menTemplateImageButtonTShirt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/menTemplateImageButtonShirt"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
         />

    <ImageButton
        android:layout_width="150dp"
        android:background="@android:color/transparent"
        android:layout_height="150dp"
        android:src="@drawable/blacktrouserm"
        android:id="@+id/menTemplateImageButtonTrouser"
        android:layout_alignTop="@+id/menTemplateImageButtonJeans"
        android:layout_alignLeft="@+id/menTemplateImageButtonShirt"
        android:layout_alignStart="@+id/menTemplateImageButtonShirt" />

    <ImageButton
        android:layout_width="150dp"
        android:background="@android:color/transparent"
        android:layout_height="150dp"
        android:textColor="@android:color/black"
        android:id="@+id/menTemplateImageButtonJeans"
        android:src="@drawable/greyjeansm"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/menTemplateImageButtonTShirt"
        android:layout_alignStart="@+id/menTemplateImageButtonTShirt"
        android:layout_below="@+id/menTemplateImageButtonShirt"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:text="           Shirts"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_below="@+id/menTemplateImageButtonShirt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="           Tshirt"
        android:id="@+id/textView8"
        android:textColor="@android:color/black"
        android:layout_below="@+id/menTemplateImageButtonTShirt"
        android:layout_alignLeft="@+id/menTemplateImageButtonTShirt"
        android:layout_alignStart="@+id/menTemplateImageButtonTShirt" />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="         Trouser"
        android:textStyle="bold"
         android:textColor="@android:color/black"
        android:id="@+id/textView9"
        android:layout_below="@+id/menTemplateImageButtonTrouser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="           Jeans"
        android:textStyle="bold"
        android:id="@+id/textView10"
        android:textColor="@android:color/black"
        android:layout_below="@+id/menTemplateImageButtonJeans"
        android:layout_alignLeft="@+id/menTemplateImageButtonJeans"
        android:layout_alignStart="@+id/menTemplateImageButtonJeans" />

</RelativeLayout>